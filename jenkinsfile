pipeline {
    agent any

    environment {
        GUI_IMAGE = 'network-scanner-frontend'
        BACKEND_IMAGE = 'network-scanner-backend'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/omaressakhi/network-scanner.git',
                        credentialsId: 'rbs'
                    ]]
                ])
            }
        }

        stage('Build GUI Docker Image') {
            steps {
                echo "Building GUI Docker image..."
                sh 'docker build -t $GUI_IMAGE -f gui/Dockerfile-gui .'
            }
        }

        stage('Build Backend Docker Image') {
            steps {
                echo "Building Backend Docker image..."
                sh 'docker build -t $BACKEND_IMAGE -f backend/Dockerfile-backend .'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished"
        }
    }
}
