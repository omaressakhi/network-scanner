pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],   // branch s7i7
                    userRemoteConfigs: [[
                        url: 'https://github.com/omaressakhi/network-scanner.git', // s7i7 URL
                        credentialsId: 'rbs' // credential li 3andk
                    ]]
                ])
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t network-scanner-frontend -f gui/Dockerfile-gui .'
            }
        }
    }
}
