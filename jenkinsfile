pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/omar-essakhi/network-scanner.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                docker build -t network-scanner:latest \
                -f gui/Dockerfile-gui gui
                """
            }
        }
    }

    post {
        always {
            echo "Build finished!"
        }
    }
}
