pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out code from GitHub...'
                git branch: 'main', url: 'https://github.com/omaressakhi/network-scanner.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo 'Building Docker images only...'
                sh 'docker-compose build'
            }
        }
    }

    post {
        always {
            echo 'Done building Docker images.'
        }
    }
}

