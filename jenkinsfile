pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/omar-essakhi/network-scanner.git',
                        credentialsId: 'rbs' // <-- ton credential GitHub ici
                    ]]
                ])
            }
        }

        stage('Checkout') {
            steps {
                git url: 'https://github.com/omar-essakhi/network-scanner.git', credentialsId: 'rbs'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                // tes commandes Docker ici
            }
        }
    }
}
