pipeline {
    agent any

    environment {
        COMPOSE_PROJECT_NAME = "network_scanner"
        DISPLAY = ":99"  // headless display for GUI
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out code from GitHub...'
                git branch: 'main', url: 'https://github.com/omaressakhi/network-scanner.git'
            }
        }

        stage('Build Containers') {
            steps {
                echo 'Building Docker images...'
                sh 'docker-compose -f docker-compose.yml build'
            }
        }

        stage('Start Backend') {
            steps {
                echo 'Starting backend container...'
                sh 'docker-compose -f docker-compose.yml up -d backend'
            }
        }

        stage('Run GUI Headless') {
            steps {
                echo 'Running GUI container in headless mode...'
                sh '''
                apt-get update && apt-get install -y xvfb
                Xvfb :99 -screen 0 1024x768x16 &
                docker-compose -f docker-compose.yml run --rm gui
                '''
            }
        }
    }

    post {
        always {
            echo 'Stopping all containers...'
            sh 'docker-compose -f docker-compose.yml down'
        }
    }
}
