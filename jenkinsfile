pipeline {
    agent any

    environment {
        COMPOSE_PROJECT_NAME = "network_scanner"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out code from GitHub...'
                git branch: 'main', url: 'https://github.com/omaressakhi/network-scanner.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo 'Building Docker images...'
                sh 'docker-compose build'
            }
        }

        stage('Start Backend') {
            steps {
                echo 'Starting backend container...'
                sh 'docker-compose up -d backend'
            }
        }

        stage('Run GUI Headless') {
            steps {
                echo 'Running GUI container headless...'
                sh '''
                Xvfb :99 -screen 0 1024x768x16 &
                export DISPLAY=:99
                docker-compose run --rm gui
                '''
            }
        }
    }

    post {
        always {
            echo 'Stopping all containers...'
            sh 'docker-compose down'
        }
    }
}
